<UserControl x:Class="MilitaryFaculty.Presentation.Views.AddEntityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:m="clr-namespace:MilitaryFaculty.Presentation.Custom.MarkupExtensions"
             xmlns:c="clr-namespace:MilitaryFaculty.Presentation.Custom">
    <UserControl.Resources>
        <ResourceDictionary Source="/Resources/CommonResources.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Style="{StaticResource H1TextBlock}"
            Text="{Binding Title}" />

        <ItemsControl
            Grid.Row="1"
            Style="{StaticResource ItemStyle}"
            ItemsSource="{Binding ViewModels}" />

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Content="Добавить"
                Style="{StaticResource SimpleButton}"
                Command="{Binding AddCommand}"
                CommandParameter="{Binding Model}" />

            <Button
                Grid.Column="1"
                Content="Отмена"
                Style="{StaticResource SimpleButton}"
                Command="{m:Command c:Browse.Back}"
                CommandParameter="{Binding Model}" />
        </Grid>
    </Grid>
</UserControl>