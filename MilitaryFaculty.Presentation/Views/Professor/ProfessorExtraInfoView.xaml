<UserControl x:Class="MilitaryFaculty.Presentation.Views.ProfessorExtraInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c="clr-namespace:MilitaryFaculty.Presentation.Custom"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="300"
             Background="White">
    <UserControl.Resources>
        <ResourceDictionary Source="../../Resources/CommonResources.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Job position-->
        <TextBlock 
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource LabelTextBlock}"
                Text="Занимаемая должность:"/>
        <TextBlock 
                Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource ValueTextBlock}"
                Text="{Binding JobPosition, Converter={c:EnumToNameConverter}}"/>

        <!--Academic rank-->
        <TextBlock 
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource LabelTextBlock}"
                Text="Учёная степень:"/>
        <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource ValueTextBlock}"
                Text="{Binding AcademicRank, Converter={c:EnumToNameConverter}}"/>

        <!--Academic degree-->
        <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Style="{StaticResource LabelTextBlock}"
                Text="Учёное звание:"/>
        <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource ValueTextBlock}"
                Text="{Binding AcademicDegree, Converter={c:EnumToNameConverter}}"/>
    </Grid>
</UserControl>
